@model IEnumerable<EmployeeManagementSystem.Models.Employee>
@{
    ViewData["Title"] = "Employees";
}

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="sm:flex sm:items-center sm:justify-between mb-6">
        <div>
            <h1 class="text-3xl font-bold text-gray-900">Employees</h1>
            <p class="mt-2 text-sm text-gray-600">Manage employee records</p>
        </div>
        @if (User.IsInRole("Admin") || User.IsInRole("Manager"))
        {
            <div class="mt-4 sm:mt-0">
                <a asp-action="Create" class="inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700">
                    Add Employee
                </a>
            </div>
        }
    </div>

    <!-- Search and Filter -->
    <div class="bg-white shadow rounded-lg p-4 mb-6">
        <form asp-action="Index" method="get" class="grid grid-cols-1 gap-4 sm:grid-cols-4" id="searchForm">
            <div>
                <input type="text" id="searchInput" name="searchString" value="@ViewBag.SearchString" placeholder="Search by name or email" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500" autocomplete="off" />
            </div>
            <div>
                <select name="departmentId" id="departmentId" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500" onchange="performSearch()">
                    <option value="">All Departments</option>
                    @foreach (var dept in (ViewBag.Departments as List<Department>) ?? new List<Department>())
                    {
                        <option value="@dept.Id" selected="@(ViewBag.DepartmentId == dept.Id)">@(dept.Name ?? "Unknown")</option>
                    }
                </select>
            </div>
            <div>
                <select name="isActive" id="isActive" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500" onchange="performSearch()">
                    <option value="">All Status</option>
                    <option value="true" selected="@(ViewBag.IsActive == true)">Active</option>
                    <option value="false" selected="@(ViewBag.IsActive == false)">Inactive</option>
                </select>
            </div>
            <div>
                <button type="submit" class="w-full px-4 py-2 bg-indigo-600 text-white rounded-md hover:bg-indigo-700">Search</button>
            </div>
        </form>
    </div>

    <!-- Employee Table -->
    <div id="employeeTableContainer">
        <partial name="_EmployeeTable" model="Model" />
    </div>
</div>

@section Scripts {
    <script>
        let debounceTimer;

        function performSearch() {
            clearTimeout(debounceTimer);
            debounceTimer = setTimeout(() => {
                const searchString = document.getElementById('searchInput').value;
                const departmentId = document.getElementById('departmentId').value;
                const isActive = document.getElementById('isActive').value;

                // Construct query parameters
                const params = new URLSearchParams({
                    searchString: searchString,
                    departmentId: departmentId,
                    isActive: isActive
                });

                fetch(`@Url.Action("Index", "Employees")?${params.toString()}`, {
                    headers: {
                        'X-Requested-With': 'XMLHttpRequest'
                    }
                })
                .then(response => {
                    if (response.ok) 
                        return response.text();
                    else 
                        console.error('Search failed');
                })
                .then(html => {
                    if (html) {
                        document.getElementById('employeeTableContainer').innerHTML = html;
                    }
                })
                .catch(error => console.error('Error:', error));
            }, 300); // Debounce delay 300ms
        }

        // Attach event listeners
        document.getElementById('searchInput').addEventListener('input', performSearch);
        
        // Note: performSearch is also called by onchange in select elements
    </script>
}
