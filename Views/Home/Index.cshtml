            <div class="flex flex-col sm:flex-row gap-4 justify-center">
                <a asp-controller="Account" asp-action="Register" class="inline-flex items-center justify-center px-8 py-4 border border-transparent text-lg font-medium rounded-lg text-indigo-600 bg-white hover:bg-indigo-50 transition-all duration-200 shadow-xl hover:shadow-2xl">
