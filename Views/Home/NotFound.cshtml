@{
    ViewData["Title"] = "404 - Page Not Found";
}

<div class="min-h-[80vh] flex items-center justify-center bg-gray-50 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md w-full text-center space-y-8">
        <div>
            <!-- Illustration / Icon -->
            <div class="mx-auto flex h-24 w-24 items-center justify-center rounded-full bg-indigo-100">
                <svg class="h-12 w-12 text-indigo-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
            </div>
            
            <h2 class="mt-6 text-center text-9xl font-extrabold text-gray-900 tracking-tight">
                404
            </h2>
            <h3 class="mt-2 text-3xl font-bold text-gray-900">
                Page Not Found
            </h3>
            <p class="mt-2 text-md text-gray-500">
                Oops! The page you're looking for doesn't seem to exist. It might have been moved, deleted, or you may have typed the URL incorrectly.
            </p>
        </div>

        <div class="flex flex-col sm:flex-row gap-4 justify-center mt-8">
            <a href="/" class="inline-flex items-center justify-center px-5 py-3 border border-transparent text-base font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors duration-150">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path></svg>
                Go Back Home
            </a>
            
            <a href="javascript:history.back()" class="inline-flex items-center justify-center px-5 py-3 border border-gray-300 text-base font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors duration-150">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path></svg>
                Go Back
            </a>
        </div>
        
        <div class="mt-6 border-t border-gray-200 pt-6">
            <p class="text-xs text-gray-400">
                If you believe this is an error, please contact support.
            </p>
        </div>
    </div>
</div>
