@model EmployeeManagementSystem.ViewModels.UserProfileViewModel
@{
    ViewData["Title"] = "My Profile";
}

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8" id="profile-page-container">
    <!-- Header Section -->
    <div class="bg-white shadow rounded-lg overflow-hidden mb-8">
        <div class="h-32 bg-indigo-600"></div>
        <div class="px-4 py-5 sm:px-6 -mt-16 flex flex-col sm:flex-row items-center sm:items-end space-y-4 sm:space-y-0 sm:space-x-6">
            <div class="relative">
                <span class="inline-flex items-center justify-center h-32 w-32 rounded-full border-4 border-white bg-indigo-100 text-3xl font-bold text-indigo-700">
                    @(Model.Employee?.FirstName?.FirstOrDefault() ?? Model.User.UserName?.FirstOrDefault() ?? 'U')
                </span>
            </div>
            <div class="flex-1 text-center sm:text-left">
                <div class="flex items-center justify-center sm:justify-start space-x-3">
                    <h1 class="text-2xl font-bold text-gray-900" id="employee-fullname">@(Model.Employee?.FullName ?? Model.User.FullName ?? "User")</h1>
                    @if (Model.IsCheckedInToday)
                    {
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800" id="attendance-status">
                            <span class="h-2 w-2 mr-1.5 rounded-full bg-green-400"></span>
                            Checked In
                        </span>
                    }
                    else
                    {
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800" id="attendance-status">
                            <span class="h-2 w-2 mr-1.5 rounded-full bg-gray-400"></span>
                            Away
                        </span>
                    }
                </div>
                <p class="text-sm text-gray-500" id="employee-role-dept">
                    @(Model.Employee?.Role?.Title ?? "-") â€¢ @(Model.Employee?.Department?.Name ?? "-")
                </p>
            </div>
            <div class="flex space-x-3">
                @foreach (var role in Model.Roles)
                {
                    <span class="inline-flex items-center px-3 py-0.5 rounded-full text-sm font-medium bg-indigo-50 text-indigo-700 border border-indigo-100">
                        @role
                    </span>
                }
            </div>
        </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <!-- Sidebar: Contact & Account -->
        <div class="space-y-8">
            <div class="bg-white shadow rounded-lg p-6">
                <h3 class="text-sm font-semibold text-gray-400 uppercase tracking-wider mb-4">Contact Information</h3>
                <dl class="space-y-4">
                    <div>
                        <dt class="text-xs text-gray-500">Email Address</dt>
                        <dd class="text-sm font-medium text-gray-900" id="profile-email">@Model.User.Email</dd>
                    </div>
                    <div>
                        <dt class="text-xs text-gray-500">Phone Number</dt>
                        <dd class="text-sm font-medium text-gray-900" id="employee-phone">@(Model.Employee?.Phone ?? "-")</dd>
                    </div>
                    <div>
                        <dt class="text-xs text-gray-500">Office Address</dt>
                        <dd class="text-sm font-medium text-gray-900" id="employee-address">@(Model.Employee?.Address ?? "-")</dd>
                    </div>
                </dl>
            </div>

            <div class="bg-white shadow rounded-lg p-6">
                <h3 class="text-sm font-semibold text-gray-400 uppercase tracking-wider mb-4">Account Details</h3>
                <dl class="space-y-4">
                    <div>
                        <dt class="text-xs text-gray-500">Username</dt>
                        <dd class="text-sm font-medium text-gray-900" id="profile-username">@Model.User.UserName</dd>
                    </div>
                    <div>
                        <dt class="text-xs text-gray-500">Member Since</dt>
                        <dd class="text-sm font-medium text-gray-900" id="employee-createdat">@(Model.Employee?.CreatedAt.ToString("MMM dd, yyyy") ?? "-")</dd>
                    </div>
                    <div>
                        <dt class="text-xs text-gray-500">Hire Date</dt>
                        <dd class="text-sm font-medium text-gray-900" id="employee-hiredate">@(Model.Employee?.HireDate.ToString("MMM dd, yyyy") ?? "-")</dd>
                    </div>
                    <div>
                        <dt class="text-xs text-gray-500">Gender</dt>
                        <dd class="text-sm font-medium text-gray-900" id="employee-gender">@(Model.Employee?.Gender.ToString() ?? "-")</dd>
                    </div>
                </dl>
            </div>
        </div>

        <!-- Main Content: Stats & Activity -->
        <div class="md:col-span-2 space-y-8">
            <!-- Leave Balances -->
            <div class="grid grid-cols-1 sm:grid-cols-3 gap-4">
                <div class="bg-white shadow rounded-lg p-6 border-b-4 border-blue-500">
                    <dt class="text-xs text-gray-500 uppercase tracking-wider">Annual Leave</dt>
                    <dd class="mt-1 flex items-baseline justify-between">
                        <div class="flex items-baseline text-2xl font-semibold text-blue-600" id="employee-annual-balance">
                            @Model.Employee?.AnnualLeaveBalance
                            <span class="ml-2 text-sm font-medium text-gray-500">days</span>
                        </div>
                    </dd>
                </div>
                <div class="bg-white shadow rounded-lg p-6 border-b-4 border-green-500">
                    <dt class="text-xs text-gray-500 uppercase tracking-wider">Sick Leave</dt>
                    <dd class="mt-1 flex items-baseline justify-between">
                        <div class="flex items-baseline text-2xl font-semibold text-green-600" id="employee-sick-balance">
                            @Model.Employee?.SickLeaveBalance
                            <span class="ml-2 text-sm font-medium text-gray-500">days</span>
                        </div>
                    </dd>
                </div>
                <div class="bg-white shadow rounded-lg p-6 border-b-4 border-purple-500">
                    <dt class="text-xs text-gray-500 uppercase tracking-wider">Personal Leave</dt>
                    <dd class="mt-1 flex items-baseline justify-between">
                        <div class="flex items-baseline text-2xl font-semibold text-purple-600" id="employee-personal-balance">
                            @Model.Employee?.PersonalLeaveBalance
                            <span class="ml-2 text-sm font-medium text-gray-500">days</span>
                        </div>
                    </dd>
                </div>
            </div>

            <!-- Recent Activity / Leave Requests -->
            <div class="bg-white shadow rounded-lg overflow-hidden" id="employee-details-container" data-employee-id="@Model.Employee?.Id">
                <div class="px-6 py-4 border-b border-gray-200 flex justify-between items-center">
                    <h3 class="text-lg font-medium text-gray-900">Recent Leave Requests</h3>
                    <a asp-controller="LeaveRequests" asp-action="Index" class="text-sm text-indigo-600 hover:text-indigo-900">View all</a>
                </div>
                <div class="flow-root">
                    <ul role="list" class="divide-y divide-gray-200" id="leave-requests-list">
                        @if (Model.Employee?.LeaveRequests != null && Model.Employee.LeaveRequests.Any())
                        {
                            @foreach (var leave in Model.Employee.LeaveRequests.OrderByDescending(l => l.CreatedAt).Take(5))
                            {
                                <li class="px-6 py-4">
                                    <div class="flex items-center justify-between">
                                        <div class="flex flex-col">
                                            <span class="text-sm font-medium text-gray-900">@leave.LeaveType Leave</span>
                                            <span class="text-xs text-gray-500">@leave.StartDate.ToString("MMM dd") - @leave.EndDate.ToString("MMM dd, yyyy") (@leave.TotalDays days)</span>
                                        </div>
                                        <div>
                                            @{
                                                var statusClass = leave.Status switch
                                                {
                                                    LeaveStatus.Approved => "bg-green-100 text-green-800",
                                                    LeaveStatus.Rejected => "bg-red-100 text-red-800",
                                                    LeaveStatus.Pending => "bg-yellow-100 text-yellow-800",
                                                    _ => "bg-gray-100 text-gray-800"
                                                };
                                            }
                                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium @statusClass">
                                                @leave.Status
                                            </span>
                                        </div>
                                    </div>
                                </li>
                            }
                        }
                        else
                        {
                            <li class="px-6 py-8 text-center text-gray-500 italic">No recent leave requests</li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
