@model IEnumerable<EmployeeManagementSystem.Models.LeaveRequest>
@{
    ViewData["Title"] = "Leave Requests";
}

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="sm:flex sm:items-center sm:justify-between mb-6">
        <div>
            <h1 class="text-3xl font-bold text-gray-900">Leave Requests</h1>
        </div>
        @if (ViewBag.HasEmployeeRecord == true)
        {
            <div class="mt-4 sm:mt-0">
                @if (ViewBag.HasPendingRequest == true)
                {
                    <button disabled class="inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-gray-400 cursor-not-allowed" title="You have a pending leave request">
                        Request Leave
                    </button>
                }
                else
                {
                    <a asp-action="Create" class="inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700">
                        Request Leave
                    </a>
                }
            </div>
        }
    </div>

    @if (ViewBag.HasEmployeeRecord == true && ViewBag.HasPendingRequest == true)
    {
        <div class="bg-yellow-50 border-l-4 border-yellow-400 p-4 mb-6">
            <div class="flex">
                <div class="flex-shrink-0">
                    <svg class="h-5 w-5 text-yellow-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
                    </svg>
                </div>
                <div class="ml-3">
                    <p class="text-sm text-yellow-700">
                        You have a pending leave request. Please wait for it to be approved or rejected before submitting a new request.
                    </p>
                </div>
            </div>
        </div>
    }


    <!-- Filter -->
    <div class="bg-white shadow rounded-lg p-4 mb-6">
        <form asp-action="Index" method="get" class="flex gap-4">
            <select name="status" class="px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500">
                <option value="">All Status</option>
                <option value="0" selected="@(ViewBag.Status == LeaveStatus.Pending)">Pending</option>
                <option value="1" selected="@(ViewBag.Status == LeaveStatus.Approved)">Approved</option>
                <option value="2" selected="@(ViewBag.Status == LeaveStatus.Rejected)">Rejected</option>
            </select>
            <button type="submit" class="px-4 py-2 bg-indigo-600 text-white rounded-md hover:bg-indigo-700">Filter</button>
        </form>
    </div>

    <!-- Leave Requests Table -->
    <div class="bg-white shadow rounded-lg overflow-hidden">
        <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
                <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Employee</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Type</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Dates</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Days</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Status</th>
                    <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase">Actions</th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
                @foreach (var leave in Model)
                {
                    <tr class="hover:bg-gray-50 cursor-pointer" onclick="window.location='@Url.Action("Details", new { id = leave.Id })'">
                        <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">@leave.Employee.FullName</td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">@leave.LeaveType</td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">@leave.StartDate.ToString("MMM dd") - @leave.EndDate.ToString("MMM dd, yyyy")</td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">@leave.TotalDays</td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            @if (leave.Status == LeaveStatus.Pending)
                            {
                                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-yellow-100 text-yellow-800">Pending</span>
                            }
                            else if (leave.Status == LeaveStatus.Approved)
                            {
                                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">Approved</span>
                            }
                            else
                            {
                                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-red-100 text-red-800">Rejected</span>
                            }
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium" onclick="event.stopPropagation()">
                            @if ((User.IsInRole("Admin") || User.IsInRole("Manager")) && leave.Status == LeaveStatus.Pending)
                            {
                                <form asp-action="Approve" asp-route-id="@leave.Id" method="post" class="inline">
                                    <button type="submit" class="text-green-600 hover:text-green-900 mr-3">Approve</button>
                                </form>
                                <form asp-action="Reject" asp-route-id="@leave.Id" method="post" class="inline">
                                    <button type="submit" class="text-red-600 hover:text-red-900">Reject</button>
                                </form>
                            }
                            else
                            {
                                <a asp-action="Details" asp-route-id="@leave.Id" class="text-indigo-600 hover:text-indigo-900">View Details</a>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
