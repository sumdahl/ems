@model IEnumerable<EmployeeManagementSystem.Models.LeaveRequest>
@{
    ViewData["Title"] = "Leave Requests";
}

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="sm:flex sm:items-center sm:justify-between mb-6">
        <div>
            <h1 class="text-3xl font-bold text-gray-900">Leave Requests</h1>
        </div>
        @if (ViewBag.HasEmployeeRecord == true)
        {
            <div class="mt-4 sm:mt-0" id="requestButtonContainer">
                @if (ViewBag.HasPendingRequest == true)
                {
                    <button disabled class="inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-gray-400 cursor-not-allowed" title="You have a pending leave request">
                        Request Leave
                    </button>
                    <div class="bg-yellow-50 border-l-4 border-yellow-400 p-4 mt-4 sm:absolute sm:mt-0 sm:top-20 sm:right-8 sm:w-auto">
                        <div class="flex">
                            <div class="flex-shrink-0">
                                <svg class="h-5 w-5 text-yellow-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                                    <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
                                </svg>
                            </div>
                            <div class="ml-3">
                                <p class="text-sm text-yellow-700">
                                    Pending request.
                                </p>
                            </div>
                        </div>
                    </div>
                }
                else
                {
                    <a asp-action="Create" class="inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700">
                        Request Leave
                    </a>
                }
            </div>
        }
    </div>


    <!-- Search and Filter -->
    <div class="bg-white shadow rounded-lg p-4 mb-6">
        <form asp-action="Index" method="get" class="grid grid-cols-1 gap-4 sm:grid-cols-4" id="searchForm">
            <div class="sm:col-span-3">
                <input type="text" id="searchInput" name="searchString" value="@ViewBag.SearchString" placeholder="Search by name, unknown reason..." class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500" autocomplete="off" />
            </div>
            <div>
                <select name="status" id="statusFilter" onchange="performSearch()" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500">
                    <option value="">All Status</option>
                    <option value="0" selected="@(ViewBag.Status == LeaveStatus.Pending)">Pending</option>
                    <option value="1" selected="@(ViewBag.Status == LeaveStatus.Approved)">Approved</option>
                    <option value="2" selected="@(ViewBag.Status == LeaveStatus.Rejected)">Rejected</option>
                </select>
            </div>
            <!-- Hidden button for accessibility/fallback -->
            <button type="submit" class="hidden">Filter</button>
        </form>
    </div>

    <!-- Leave Requests Table -->
    <div id="leaveRequestTableContainer">
        <partial name="_LeaveRequestTable" model="Model" />
    </div>
</div>

@section Scripts {
    <script>
        let debounceTimer;

        function performSearch(immediate = false) {
            clearTimeout(debounceTimer);
            
            const executeSearch = () => {
                const searchString = document.getElementById('searchInput').value;
                const status = document.getElementById('statusFilter').value;

                // Construct query parameters
                const params = new URLSearchParams({
                    searchString: searchString,
                    status: status
                });

                fetch(`@Url.Action("Index", "LeaveRequests")?${params.toString()}`, {
                    headers: {
                        'X-Requested-With': 'XMLHttpRequest'
                    }
                })
                .then(response => {
                    if (response.ok) 
                        return response.text();
                    else 
                        console.error('Search failed');
                })
                .then(html => {
                    if (html) {
                        document.getElementById('leaveRequestTableContainer').innerHTML = html;
                    }
                })
                .catch(error => console.error('Error:', error));
            };

            if (immediate) {
                executeSearch();
            } else {
                debounceTimer = setTimeout(executeSearch, 300); // 300ms delay
            }
        }

        // Attach event listener to inputs
        document.getElementById('searchInput').addEventListener('input', () => performSearch(false));

        // Function to update the request button state
        function updateRequestButtonState() {
            fetch('@Url.Action("HasPendingRequest", "LeaveRequests")')
                .then(response => response.json())
                .then(data => {
                    const container = document.getElementById('requestButtonContainer');
                    if (data.hasPending) {
                        container.innerHTML = `
                            <button disabled class="inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-gray-400 cursor-not-allowed" title="You have a pending leave request">
                                Request Leave
                            </button>
                             <div class="bg-yellow-50 border-l-4 border-yellow-400 p-4 mt-4 sm:absolute sm:mt-0 sm:top-20 sm:right-8 sm:w-auto">
                                <div class="flex">
                                    <div class="flex-shrink-0">
                                        <svg class="h-5 w-5 text-yellow-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                                            <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
                                        </svg>
                                    </div>
                                    <div class="ml-3">
                                        <p class="text-sm text-yellow-700">
                                            Pending request.
                                        </p>
                                    </div>
                                </div>
                            </div>
                        `;
                    } else {
                        container.innerHTML = `
                            <a href="@Url.Action("Create", "LeaveRequests")" class="inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700">
                                Request Leave
                            </a>
                        `;
                    }
                })
                .catch(error => console.error('Error fetching pending request status:', error));
        }

        // Listen for SignalR updates
        if (typeof connection !== 'undefined') {
            connection.on("ReceiveSystemUpdate", function (updateType) {
                if (updateType === "LeaveRequests") {
                    console.log("Received leave request update. Refreshing table...");
                    performSearch(true);
                    updateRequestButtonState();
                }
            });
        }

    </script>
}
