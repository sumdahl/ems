@model EmployeeManagementSystem.Models.LeaveRequest
@{
    ViewData["Title"] = "Request Leave";
    var employee = ViewBag.Employee as Employee;
}

<div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="mb-6">
        <h1 class="text-3xl font-bold text-gray-900">Request Leave</h1>
    </div>

    <div class="bg-white shadow rounded-lg p-6">
        <div class="mb-6 p-4 bg-blue-50 rounded-lg">
            <h3 class="font-medium text-blue-900">Leave Balance</h3>
            <div class="mt-2 grid grid-cols-2 gap-4">
                <div>
                    <p class="text-sm text-blue-700">Annual Leave</p>
                    <p class="text-2xl font-bold text-blue-900">@employee?.AnnualLeaveBalance days</p>
                </div>
                <div>
                    <p class="text-sm text-blue-700">Sick Leave</p>
                    <p class="text-2xl font-bold text-blue-900">@employee?.SickLeaveBalance days</p>
                </div>
            </div>
        </div>

        <form asp-action="Create" method="post">

            
            <div class="space-y-6">
                <div>
                    <label asp-for="LeaveType" class="block text-sm font-medium text-gray-700 mb-1"></label>
                    <select asp-for="LeaveType" required class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500">
                        <option value="0">Annual</option>
                        <option value="1">Sick</option>
                        <option value="2">Personal</option>
                        <option value="3">Unpaid</option>
                        @if (employee?.Gender == EmployeeManagementSystem.Models.Gender.Female)
                        {
                            <option value="4">Maternity</option>
                        }
                        @if (employee?.Gender == EmployeeManagementSystem.Models.Gender.Male)
                        {
                            <option value="5">Paternity</option>
                        }
                    </select>
                    <span asp-validation-for="LeaveType" class="text-red-600 text-xs"></span>
                </div>
                
                <div class="grid grid-cols-2 gap-4">
                    <div>
                        <label asp-for="StartDate" class="block text-sm font-medium text-gray-700 mb-1"></label>
                        <input asp-for="StartDate" type="date" required class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500" />
                        <span asp-validation-for="StartDate" class="text-red-600 text-xs"></span>
                    </div>
                    
                    <div>
                        <label asp-for="EndDate" class="block text-sm font-medium text-gray-700 mb-1"></label>
                        <input asp-for="EndDate" type="date" required class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500" />
                        <span asp-validation-for="EndDate" class="text-red-600 text-xs"></span>
                    </div>
                </div>
                
                <div>
                    <label asp-for="Reason" class="block text-sm font-medium text-gray-700 mb-1"></label>
                    <textarea asp-for="Reason" rows="4" required class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500"></textarea>
                    <span asp-validation-for="Reason" class="text-red-600 text-xs"></span>
                </div>
            </div>
            
            <div class="mt-6 flex items-center justify-between">
                <a asp-action="Index" class="text-indigo-600 hover:text-indigo-800 font-medium">Cancel</a>
                <button type="submit" class="px-6 py-2 bg-indigo-600 text-white font-medium rounded-md hover:bg-indigo-700">
                    Submit Request
                </button>
            </div>
        </form>
    </div>
</div>
