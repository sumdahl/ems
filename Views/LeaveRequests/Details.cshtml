@model EmployeeManagementSystem.Models.LeaveRequest
@{
    ViewData["Title"] = "Leave Request Details";
}

<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="mb-6">
        <a asp-action="Index" class="text-indigo-600 hover:text-indigo-800 font-medium">
            ‚Üê Back to Leave Requests
        </a>
    </div>

    <div class="bg-white shadow rounded-lg overflow-hidden">
        <div class="px-6 py-4 border-b border-gray-200 bg-gray-50">
            <h1 class="text-2xl font-bold text-gray-900">Leave Request Details</h1>
        </div>

        <div class="px-6 py-6 space-y-6">
            <!-- Status Badge -->
            <div class="flex items-center justify-between">
                <h2 class="text-lg font-semibold text-gray-900">Status</h2>
                <div>
                    @if (Model.Status == LeaveStatus.Pending)
                    {
                        <span class="px-3 py-1 inline-flex text-sm leading-5 font-semibold rounded-full bg-yellow-100 text-yellow-800">Pending</span>
                    }
                    else if (Model.Status == LeaveStatus.Approved)
                    {
                        <span class="px-3 py-1 inline-flex text-sm leading-5 font-semibold rounded-full bg-green-100 text-green-800">Approved</span>
                    }
                    else if (Model.Status == LeaveStatus.Rejected)
                    {
                        <span class="px-3 py-1 inline-flex text-sm leading-5 font-semibold rounded-full bg-red-100 text-red-800">Rejected</span>
                    }
                    else
                    {
                        <span class="px-3 py-1 inline-flex text-sm leading-5 font-semibold rounded-full bg-gray-100 text-gray-800">Cancelled</span>
                    }
                </div>
            </div>

            <!-- Employee Information -->
            <div class="border-t border-gray-200 pt-6">
                <h2 class="text-lg font-semibold text-gray-900 mb-4">Employee Information</h2>
                <dl class="grid grid-cols-1 gap-x-4 gap-y-4 sm:grid-cols-2">
                    <div>
                        <dt class="text-sm font-medium text-gray-500">Name</dt>
                        <dd class="mt-1 text-sm text-gray-900">@Model.Employee.FullName</dd>
                    </div>
                    <div>
                        <dt class="text-sm font-medium text-gray-500">Email</dt>
                        <dd class="mt-1 text-sm text-gray-900">@Model.Employee.Email</dd>
                    </div>
                    <div>
                        <dt class="text-sm font-medium text-gray-500">Department</dt>
                        <dd class="mt-1 text-sm text-gray-900">@Model.Employee.Department?.Name</dd>
                    </div>
                    <div>
                        <dt class="text-sm font-medium text-gray-500">Role</dt>
                        <dd class="mt-1 text-sm text-gray-900">@Model.Employee.Role?.Title</dd>
                    </div>
                </dl>
            </div>

            <!-- Leave Details -->
            <div class="border-t border-gray-200 pt-6">
                <h2 class="text-lg font-semibold text-gray-900 mb-4">Leave Details</h2>
                <dl class="grid grid-cols-1 gap-x-4 gap-y-4 sm:grid-cols-2">
                    <div>
                        <dt class="text-sm font-medium text-gray-500">Leave Type</dt>
                        <dd class="mt-1 text-sm text-gray-900">@Model.LeaveType</dd>
                    </div>
                    <div>
                        <dt class="text-sm font-medium text-gray-500">Total Days</dt>
                        <dd class="mt-1 text-sm text-gray-900">@Model.TotalDays days</dd>
                    </div>
                    <div>
                        <dt class="text-sm font-medium text-gray-500">Start Date</dt>
                        <dd class="mt-1 text-sm text-gray-900">@Model.StartDate.ToString("MMMM dd, yyyy")</dd>
                    </div>
                    <div>
                        <dt class="text-sm font-medium text-gray-500">End Date</dt>
                        <dd class="mt-1 text-sm text-gray-900">@Model.EndDate.ToString("MMMM dd, yyyy")</dd>
                    </div>
                    <div class="sm:col-span-2">
                        <dt class="text-sm font-medium text-gray-500">Requested On</dt>
                        <dd class="mt-1 text-sm text-gray-900">@Model.CreatedAt.ToString("MMMM dd, yyyy 'at' hh:mm tt")</dd>
                    </div>
                </dl>
            </div>

            <!-- Reason -->
            <div class="border-t border-gray-200 pt-6">
                <h2 class="text-lg font-semibold text-gray-900 mb-2">Reason for Leave</h2>
                <div class="bg-gray-50 rounded-lg p-4">
                    <p class="text-sm text-gray-900 whitespace-pre-wrap">@Model.Reason</p>
                </div>
            </div>

            <!-- Approval Information (if approved or rejected) -->
            @if (Model.Status == LeaveStatus.Approved || Model.Status == LeaveStatus.Rejected)
            {
                <div class="border-t border-gray-200 pt-6">
                    <h2 class="text-lg font-semibold text-gray-900 mb-4">
                        @(Model.Status == LeaveStatus.Approved ? "Approval" : "Rejection") Information
                    </h2>
                    <dl class="grid grid-cols-1 gap-x-4 gap-y-4 sm:grid-cols-2">
                        @if (Model.ApprovedBy != null)
                        {
                            <div>
                                <dt class="text-sm font-medium text-gray-500">@(Model.Status == LeaveStatus.Approved ? "Approved" : "Rejected") By</dt>
                                <dd class="mt-1 text-sm text-gray-900">@Model.ApprovedBy.FullName</dd>
                            </div>
                        }
                        @if (Model.ApprovedAt.HasValue)
                        {
                            <div>
                                <dt class="text-sm font-medium text-gray-500">@(Model.Status == LeaveStatus.Approved ? "Approved" : "Rejected") On</dt>
                                <dd class="mt-1 text-sm text-gray-900">@Model.ApprovedAt.Value.ToString("MMMM dd, yyyy 'at' hh:mm tt")</dd>
                            </div>
                        }
                        @if (!string.IsNullOrWhiteSpace(Model.ApproverComments))
                        {
                            <div class="sm:col-span-2">
                                <dt class="text-sm font-medium text-gray-500">Comments</dt>
                                <dd class="mt-1 text-sm text-gray-900 bg-gray-50 rounded-lg p-4 whitespace-pre-wrap">@Model.ApproverComments</dd>
                            </div>
                        }
                    </dl>
                </div>
            }

            <!-- Actions for Managers/Admins -->
            @{
                var canApprove = ViewBag.CanApprove as bool? ?? false;
            }
            @if (canApprove)
            {
                <div class="border-t border-gray-200 pt-6">
                    <h2 class="text-lg font-semibold text-gray-900 mb-4">Actions</h2>
                    <div class="flex gap-4">
                        <form asp-action="Approve" asp-route-id="@Model.Id" method="post" class="flex-1">
                            <div class="mb-3">
                                <label for="approveComments" class="block text-sm font-medium text-gray-700 mb-1">Comments (Optional)</label>
                                <textarea name="comments" id="approveComments" rows="3" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-green-500" placeholder="Add any comments..."></textarea>
                            </div>
                            <button type="submit" class="w-full px-4 py-2 bg-green-600 text-white font-medium rounded-md hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-green-500">
                                Approve Request
                            </button>
                        </form>
                        
                        <form asp-action="Reject" asp-route-id="@Model.Id" method="post" class="flex-1" id="rejectForm">
                            <div class="mb-3">
                                <label for="rejectComments" class="block text-sm font-medium text-gray-700 mb-1">
                                    Reason for Rejection (required) <span class="text-red-600">*</span>
                                </label>
                                <textarea 
                                    name="comments" 
                                    id="rejectComments" 
                                    rows="3" 
                                    required
                                    class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-red-500" 
                                    placeholder="Please explain why this leave request is being rejected..."></textarea>
                            </div>
                            <button type="submit" class="w-full px-4 py-2 bg-red-600 text-white font-medium rounded-md hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-red-500">
                                Reject Request
                            </button>
                        </form>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
