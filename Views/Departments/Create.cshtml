@model EmployeeManagementSystem.Models.Department
@{
    ViewData["Title"] = "Create Department";
}

<div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="mb-6">
        <h1 class="text-3xl font-bold text-gray-900">Create Department</h1>
    </div>

    <div class="bg-white shadow rounded-lg p-6">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-red-600 text-sm mb-4"></div>
            
            <div class="space-y-6">
                <div>
                    <label asp-for="Name" class="block text-sm font-medium text-gray-700 mb-1"></label>
                    <input asp-for="Name" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500" />
                    <span asp-validation-for="Name" class="text-red-600 text-xs"></span>
                </div>
                
                <div>
                    <label asp-for="Description" class="block text-sm font-medium text-gray-700 mb-1"></label>
                    <textarea asp-for="Description" rows="3" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500"></textarea>
                    <span asp-validation-for="Description" class="text-red-600 text-xs"></span>
                </div>
                
                @if (User.IsInRole("Admin"))
                {
                    <div>
                        <label asp-for="ManagerId" class="block text-sm font-medium text-gray-700 mb-1">Manager</label>
                        <select asp-for="ManagerId" asp-items="ViewBag.ManagerId" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500">
                            <option value="">Select Manager (Optional)</option>
                        </select>
                        <span asp-validation-for="ManagerId" class="text-red-600 text-xs"></span>
                    </div>
                }

                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Roles</label>
                    <p class="text-xs text-gray-500 mb-3">Define initial roles for this department. These will be available for employee assignment.</p>
                    <div id="roles-container" class="space-y-3">
                        <div class="flex items-center gap-2 role-input-group">
                            <input type="text" name="RoleNames" placeholder="e.g. Manager (auto-created if not present)" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500" />
                        </div>
                    </div>
                    <button type="button" onclick="addRoleInput()" class="mt-3 text-sm text-indigo-600 hover:text-indigo-800 font-medium flex items-center">
                        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" /></svg>
                        Add Another Role
                    </button>
                </div>
            </div>
            
            <div class="mt-6 flex items-center justify-between">
                <a asp-action="Index" class="text-indigo-600 hover:text-indigo-800 font-medium">Cancel</a>
                <button type="submit" class="px-6 py-2 bg-indigo-600 text-white font-medium rounded-md hover:bg-indigo-700">
                    Create Department
                </button>
            </div>
        </form>
    </div>
</div>

<script>
    function addRoleInput() {
        const container = document.getElementById('roles-container');
        const div = document.createElement('div');
        div.className = 'flex items-center gap-2 role-input-group';
        div.innerHTML = `
            <input type="text" name="RoleNames" placeholder="Role Title" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500" />
            <button type="button" onclick="this.parentElement.remove()" class="text-red-500 hover:text-red-700 p-2" title="Remove Role">
                 <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" /></svg>
            </button>
        `;
        container.appendChild(div);
    }
</script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
