@model EmployeeManagementSystem.Models.Department
@{
    ViewData["Title"] = "Delete Department";
}

<div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="mb-6">
        <h1 class="text-3xl font-bold text-gray-900">Delete Department</h1>
    </div>

    <div class="bg-red-50 border-l-4 border-red-400 p-4 mb-6">
        <div class="flex">
            <div class="flex-shrink-0">
                <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
                </svg>
            </div>
            <div class="ml-3">
                <h3 class="text-sm font-medium text-red-800">Warning</h3>
                <div class="mt-2 text-sm text-red-700">
                    <p>Are you sure you want to delete this department? This action cannot be undone.</p>
                    @if (Model.Employees.Any())
                    {
                        <p class="mt-2"><strong>Note:</strong> This department has @Model.Employees.Count employee(s). They will need to be reassigned.</p>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="bg-white shadow rounded-lg p-6">
        <dl class="grid grid-cols-1 gap-4 sm:grid-cols-2">
            <div>
                <dt class="text-sm font-medium text-gray-500">Name</dt>
                <dd class="mt-1 text-sm text-gray-900">@Model.Name</dd>
            </div>

            <div>
                <dt class="text-sm font-medium text-gray-500">Manager</dt>
                <dd class="mt-1 text-sm text-gray-900">@(Model.Manager?.FullName ?? "Not assigned")</dd>
            </div>

            <div>
                <dt class="text-sm font-medium text-gray-500">Total Employees</dt>
                <dd class="mt-1 text-sm text-gray-900">@Model.Employees.Count</dd>
            </div>

            <div>
                <dt class="text-sm font-medium text-gray-500">Active Employees</dt>
                <dd class="mt-1 text-sm text-gray-900">@Model.Employees.Count(e => e.IsActive)</dd>
            </div>

            <div class="sm:col-span-2">
                <dt class="text-sm font-medium text-gray-500">Description</dt>
                <dd class="mt-1 text-sm text-gray-900">@(Model.Description ?? "No description")</dd>
            </div>
        </dl>

        <form asp-action="Delete" method="post" class="mt-6">
            <input type="hidden" asp-for="Id" />
            <div class="flex items-center justify-between">
                <a asp-action="Index" class="text-indigo-600 hover:text-indigo-800 font-medium">Cancel</a>
                <button type="submit" class="px-6 py-2 bg-red-600 text-white font-medium rounded-md hover:bg-red-700">
                    Delete Department
                </button>
            </div>
        </form>
    </div>
</div>
