@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> UserManager
@inject EmployeeManagementSystem.Services.INotificationService NotificationService
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Employee Management System</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        primary: '#4f46e5',
                    }
                }
            }
        }
    </script>
</head>
<body class="bg-gray-50">
    @if (User.Identity?.IsAuthenticated == true)
    {
        <!-- Authenticated Navigation -->
        <nav class="bg-white shadow-lg">
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
                <div class="flex justify-between h-16">
                    <div class="flex">
                        <div class="flex-shrink-0 flex items-center">
                            <a asp-controller="Dashboard" asp-action="Index" class="text-2xl font-bold text-indigo-600">EMS</a>
                        </div>
                        <div class="hidden sm:ml-6 sm:flex sm:space-x-8">
                            <a asp-controller="Dashboard" asp-action="Index" class="border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700 inline-flex items-center px-1 pt-1 border-b-2 text-sm font-medium">
                                Dashboard
                            </a>
                            <a asp-controller="Employees" asp-action="Index" class="border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700 inline-flex items-center px-1 pt-1 border-b-2 text-sm font-medium">
                                Employees
                            </a>
                            @{
                                int pendingLeave = await NotificationService.GetPendingLeaveRequestsCountAsync(User);
                                int pendingAttendance = await NotificationService.GetPendingAttendanceCountAsync(User);
                            }
                            @if (User.IsInRole("Admin") || User.IsInRole("Manager"))
                            {
                                <a asp-controller="Departments" asp-action="Index" class="border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700 inline-flex items-center px-1 pt-1 border-b-2 text-sm font-medium">
                                    Departments
                                </a>
                            }
                            <a asp-controller="LeaveRequests" asp-action="Index" class="relative border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700 inline-flex items-center px-1 pt-1 border-b-2 text-sm font-medium">
                                Leave Requests
                                @if (pendingLeave > 0)
                                {
                                    <span class="absolute top-1  -right-3 inline-flex items-center justify-center px-2 py-1 text-xs font-bold leading-none text-red-100 transform bg-red-600 rounded-full">
                                        @pendingLeave
                                    </span>
                                }
                            </a>
                            <a asp-controller="Attendance" asp-action="Index" class="relative border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700 inline-flex items-center px-1 pt-1 border-b-2 text-sm font-medium">
                                Attendance
                                @if (pendingAttendance > 0)
                                {
                                    <span class="absolute -top-2 -right-3 inline-flex items-center justify-center px-2 py-1 text-xs font-bold leading-none text-red-100 transform bg-red-600 rounded-full">
                                        @pendingAttendance
                                    </span>
                                }
                            </a>
                        </div>
                    </div>
                    <div class="flex items-center">
                        <div class="flex-shrink-0">
                            @{
                                var appUser = await UserManager.GetUserAsync(User);
                                var displayName = appUser?.FullName ?? User.Identity?.Name;
                                var initials = "U";
                                if (!string.IsNullOrEmpty(appUser?.FullName))
                                {
                                    var parts = appUser.FullName.Trim().Split(' ');
                                    if (parts.Length >= 2)
                                    {
                                        initials = $"{parts[0][0]}{parts[parts.Length - 1][0]}".ToUpper();
                                    }
                                    else if (parts.Length == 1)
                                    {
                                        initials = parts[0][0].ToString().ToUpper();
                                    }
                                }
                                else if (!string.IsNullOrEmpty(User.Identity?.Name))
                                {
                                    initials = User.Identity.Name[0].ToString().ToUpper();
                                }
                            }
                            <a asp-controller="Account" asp-action="Profile" class="inline-flex items-center group mr-4" title="View Profile">
                                <span class="text-gray-700 text-sm mr-2 group-hover:text-indigo-600 font-medium">@displayName</span>
                                <span class="inline-flex items-center justify-center h-8 w-8 rounded-full bg-indigo-100 group-hover:bg-indigo-200 transition-colors duration-200">
                                    <span class="text-xs font-medium leading-none text-indigo-700">@initials</span>
                                </span>
                            </a>
                            @if (User.IsInRole("Admin"))
                            {
                                <a asp-controller="Account" asp-action="Register" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 mr-2">
                                    Register User
                                </a>
                            }
                            <form asp-controller="Account" asp-action="Logout" method="post" class="inline">
                                <button type="submit" class="inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50">
                                    Logout
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </nav>
    }
    else
    {
        <!-- Public Navigation -->
        <nav class="bg-white shadow-sm">
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
                <div class="flex justify-between h-16">
                    <div class="flex items-center">
                        <a asp-controller="Home" asp-action="Index" class="text-2xl font-bold text-indigo-600">
                            EMS
                        </a>
                    </div>
                    <div class="flex items-center space-x-4">
                        <a asp-controller="Account" asp-action="Login" class="text-gray-700 hover:text-indigo-600 px-3 py-2 rounded-md text-sm font-medium">
                            Sign In
                        </a>
                        <a asp-controller="Account" asp-action="Register" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700">
                            Get Started
                        </a>
                    </div>
                </div>
            </div>
        </nav>
    }

    <main class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "Home" && ViewContext.RouteData.Values["action"]?.ToString() == "Index" ? "" : "py-6")">
        @if (TempData["Success"] != null)
        {
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 mb-4">
                <div class="bg-green-50 border-l-4 border-green-400 p-4">
                    <p class="text-green-700">@TempData["Success"]</p>
                </div>
            </div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 mb-4">
                <div class="bg-red-50 border-l-4 border-red-400 p-4">
                    <p class="text-red-700">@TempData["Error"]</p>
                </div>
            </div>
        }
        @RenderBody()
    </main>

    @* <footer class="bg-white border-t border-gray-200 mt-12">
        <div class="max-w-7xl mx-auto py-6 px-4 sm:px-6 lg:px-8">
            <p class="text-center text-gray-500 text-sm">
                &copy; 2026 Employee Management System. All rights reserved.
            </p>
        </div>
    </footer> *@

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
